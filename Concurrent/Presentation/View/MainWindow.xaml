<Window x:Class="Presentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"

        Title="Symulacja stołu bilardowego" 
        Height="900" 
        Width="1600" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <!-- Główny kontener-->
    <Grid>
        <!-- Obramowanie stołu -->
        <Border Background="SaddleBrown"
            CornerRadius="15"
            Padding="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
                Margin="50,0,0,0">

            <!-- Stół (zielony Canvas wewnątrz ramki) -->
            <Canvas Name="PoolTableCanvas"
                    Background="ForestGreen"
                    Width="1000"           
                    Height="600" />

            

        </Border>

        <!-- Panel kontrolny po prawej stronie -->
        <StackPanel 
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,50,50,0"
            Width="200">

            <Label Content="Ilość kul:" FontSize="20"/>
            
            <TextBox 
                Name="BallCountTextBox"
                Text="5" 
                Margin="0,0,0,10" 
                FontSize="20"/>

            <Button 
                Name="StartButton"
                Content="Start"
                Margin="0,10,0,5" 
                FontSize="20"/>

            <Button 
                Name="StopButton"
                Content="Stop"
                Margin="0,5,0,0" 
                FontSize="20"/> 

        </StackPanel>
    </Grid>
    
</Window>
